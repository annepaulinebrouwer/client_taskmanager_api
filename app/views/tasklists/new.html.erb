<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6 form-group">
      <h2>Hi,<small> welcome to the taskmanager</small></h2>
      <p>Create your own tasklist within seconds</p>
      <%= form_tag tasklists_path, method: :post do %>
        <%= text_field_tag :name, nil, :placeholder => "name" %>
        <%= text_field_tag :description, nil, :placeholder => "description" %>
        <%= submit_tag "Create" %>
      <% end %>
    </div>
  </div>
</div>


